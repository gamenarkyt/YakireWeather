{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommend",
    "standard-with-typescript",
    "plugin:react/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": "error" // Обязательно!! Подсвечивает ошибки из Prettier.
  }
}
